@model QuanLyLopHoc.Models.Entities.Post;

<div class="max-w-3xl mx-auto border border-gray-400 rounded-lg px-4 py-3 mt-6 backdrop-blur-sm bg-gray-600/30">
    <h1 class="text-3xl font-semibold text-center pt-6 pb-4">
        @Model.Title
    </h1>
    <div class="flex justify-center py-4">
        <p class="mx-4"><span class="font-medium">Người tạo:</span> @Model.Creator.FirstName @Model.Creator.LastName</p>
        <p>
            <span class="font-medium">
                Loại bài đăng:
            </span> @Model.Type</p>
    </div>
    <div class="mx-auto my-4">
        <h2 class="font-medium">Mô tả</h2>
        <p>
            @Model.Comment
        </p>
    </div>
    <div>
        <h3 class="font-medium">Danh sách tài liệu:</h3>
        <ol class="ml-6 mt-4">
            @foreach (var item in Model.Contents)
            {
                <li class="mb-2">
                    <a href="@item.Content">
                        @item.Content.Split("\\").Last()
                    </a>
                </li>
            }
        </ol>
        
    </div>
    <div class="my-4 flex justify-end">
        <a asp-controller="Subject" asp-action="Details" asp-route-id="@TempData["subjectId"] @{TempData.Keep("subjectId");}"
                class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">
            Trở về
        </a>
    </div>
</div>

