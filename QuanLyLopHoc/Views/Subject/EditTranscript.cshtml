@using QuanLyLopHoc.Models.Entities;
@model List<DetailTranscript>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg my-6">
    <h1 class="py-6 px-6 text-2xl font-medium">
        Danh sách điểm
    </h1>
</div>
<div class="p-5 flex justify-between items-center">
    <form method="get" asp-action="Details">
        <label for="table-search" class="sr-only">Search</label>
        <div class="relative mt-1">
            <button type="submit" class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none cursor-pointer">
                <svg class="w-5 h-5 text-gray-500 "
                     aria-hidden="true"
                     fill="currentColor"
                     viewBox="0 0 20 20"
                     xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                          d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                          clip-rule="evenodd"></path>
                </svg>
            </button>
            <input type="text"
                   name="StuNameTrans"
                   class="block p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 "
                   placeholder="Tìm kiếm sinh viên" />
        </div>
    </form>
    <a asp-action="Download" asp-controller="Subject" asp-route-id="@TempData["subjectId"] @{TempData.Keep("subjectId");}"     
        class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 font-medium rounded-lg text-sm px-3 py-2 w-50 flex items-center @(ViewData["isTeacher"].ToString().ToLower() == "false"?"hidden":"")">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
        </svg>
        Tải xuống danh sách điểm 
    </a>
</div>
<form method="post" asp-action="EditTranscript" asp-controller="Subject">
    <fieldset class="max-w-full mx-4 sm:mx-auto my-4 p-3">
        <table class="w-full text-sm text-left text-gray-900 ">
            <thead class="text-xs text-gray-900 uppercase ">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Tên sinh viên
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Điểm CC
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Điểm TX
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Điểm CK
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Điểm TB
                    </th>
                </tr>
            </thead>
            <tbody>
                @for(int i=0; i< Model.Count; i++)
                {
                    <tr class="border-b border-gray-200 dark:border-gray-700">
                        <td scope="row"
                            class="px-6 py-4 text-gray-900 whitespace-nowrap flex gap-4">
                            <div>
                                @if (@Model[i].Student.Avatar == null)
                                {
                                    <div id="alter-avatar" class="bg-gray-700 rounded-full h-6 w-6 inline-flex justify-center items-center">
                                        <span class="font-bold text-sm text-white ">@Model[i].Student.LastName.Split(' ').Last()[0]</span>
                                    </div>
                                    <img id="avatar" class="hidden rounded-full w-40 h-40" src=""
                                         alt="image description">
                                }
                                else
                                {
                                    <div id="alter-avatar" class="hidden bg-gray-700 rounded-full h-6 w-6 inline-flex justify-center items-center">
                                        <span class="font-bold text-6xl text-white ">JL</span>
                                    </div>
                                    <img id="avatar" class="rounded-full w-6 h-6" src="@Model[i].Student.Avatar"
                                         alt="image description">
                                }
                            </div>
                            <div>
                                @Model[i].Student.FirstName @Model[i].Student.LastName
                            </div>
                            <div>                            
                                <input type="hidden" value="@Model[i].UserId" asp-for="@Model[i].UserId">
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <input type="text"
                                   id="website-admin"
                                   class="text-gray-900 block flex-1 min-w-0 max-w-full text-sm p-2.5 bg-gray-300"
                                   placeholder=""
                               value="@Model[i].DiemCC"
                               asp-for="@Model[i].DiemCC" />
                        </td>
                        <td class="px-6 py-4">
                            <input type="text"
                                   id="website-admin"
                                   class="text-gray-900 block flex-1 min-w-0 max-w-full text-sm p-2.5 bg-gray-300"
                                   placeholder=""
                                   value="@Model[i].DiemTX"
                                   asp-for="@Model[i].DiemTX" />
                        </td>
                        <td class="px-6 py-4">
                            <input type="text"
                                   id="website-admin"
                                   class="text-gray-900 block flex-1 min-w-0 max-w-full text-sm p-2.5 bg-gray-300"
                                   placeholder=""
                                   value="@Model[i].DiemCK"
                                   asp-for="@Model[i].DiemCK" />
                        </td>
                        <td class="px-6 py-4">
                            <input type="text"
                                   id="website-admin"
                                   class="text-gray-900 block flex-1 min-w-0 max-w-full text-sm p-2.5 "
                                   placeholder=""
                                   disabled
                                   value="@Model[i].DiemTB"
                                   asp-for="@Model[i].DiemTB" />
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <div class="ml-auto max-w-xs sm:w-full my-10 flex justify-evenly">
            <button type="submit"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-2/5 sm:w-auto px-5 py-2.5 sm:ml-6 text-center">
                Xác nhận
            </button>
            <a asp-controller="Subject" asp-action="Details" asp-route-id="@TempData["subjectId"] @{TempData.Keep("subjectId");}"
               type="submit"
               class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-2/5 sm:w-3/12 px-5 py-2.5 sm:ml-6 text-center">
                Hủy
            </a>
        </div>
    </fieldset>
</form>


