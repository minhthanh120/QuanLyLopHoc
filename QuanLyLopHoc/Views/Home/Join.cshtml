@model QuanLyLopHoc.Models.Entities.Subject
@{

}

@if (Model.Id == null)
{
    <div class="flex flex-col items-center">
        <div class="rounded-lg bg-cyan-200/30 flex flex-col w-[calc(100%-15rem)] max-w-3xl p-2 backdrop-blur-sm h-96 items-center justify-center">
            <h1 class="text-3xl font-extrabold">Mã mời ko khả dụng</h1>
        </div>

    </div>
}
else
{
    <div class="flex flex-col items-center">
        <div class="rounded-lg bg-cyan-200/30 flex flex-col w-[calc(100%-15rem)] max-w-3xl p-2 backdrop-blur-sm">
            <div class="m-3 flex flex-col items-center">
                <h1 class="text-2xl font-extrabold">@Model.SubjectName</h1>
                <h2 class="mb-4 text-base font-normal">@Model.Description</h2>
                <h2 class="mb-4 text-base font-normal ">
                    Giáo viên @Model.Creator.FirstName
                    @Model.Creator.LastName đã tạo vào lúc @Model.CreatedDate.ToString("HH:mm dd/MM/yyyy")
                </h2>
            </div>
            <div class="flex flex-row">
                <div class="">
                    @if (Model.TeacherSubjects != null)
                    {
                        <p>Giáo viên</p>
                        <div>
                            @foreach (var teacher in Model.TeacherSubjects)
                            {
                                <a href="#" class="flex flex-row items-center mb-1">
                                    @if (teacher.User.Avatar == null)
                                    {
                                        <div class="relative inline-flex items-center justify-center w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600">
                                            <span class="font-medium text-gray-600 ">@teacher.User.LastName.Split(' ').Last()[0]</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <img class="h-10 w-10 rounded-full"
                                             src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="Rounded avatar">
                                    }
                                    <p class="ml-2">@teacher.User.FirstName @teacher.User.LastName</p>
                                </a>
                            }
                        </div>
                    }
                </div>
                @if (Model.StudentSubjects != null)
                {
                    <div class="ml-auto">
                        <p>@Model.StudentSubjects.Count() Sinh viên đã tham gia</p>
                    </div>
                }
            </div>
            <hr />
            <div class="mt-6 flex justify-center">
                <a href="/Student/JoinClass/?subjectId=@Model.Id"
                   class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
                    Tham
                    gia
                </a>
            </div>
        </div>
    </div>
}