@{
ViewData["Title"] = "Tham gia lớp học của bạn ngay bây giờ";
var subject = ViewData["subject"] as QuanLyLopHoc.Models.Entities.Subject;
}
<div class="p-3 rounded-t-lg backdrop-blur-sm bg-gray-600/30">
    <h1 class="text-4xl font-extrabold">@ViewData["Title"]</h1>
    <h2 class="mb-4 text-lg font-normal text-gray-500">Tham gia lớp học của bạn chỉ bằng việc nhập mã mời.</h2>
</div>
<hr />
<div class="flex items-center justify-center my-6">
    <form method="get">
        <label for="search" class="text-sm font-medium text-gray-900 sr-only dark:text-white">Mã mời tham gia lớp
            học(Invite Code)</label>
        <div class="relative w-96">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg class="w-8 h-8 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor"
                    stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M15.75 15.75l-2.489-2.489m0 0a3.375 3.375 0 10-4.773-4.773 3.375 3.375 0 004.774 4.774zM21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                    </path>
                </svg>
            </div>
            <input maxlength="10" type="search" id="inviteCode" name="inviteCode"
                class="mx-2 block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500"
                placeholder="Invite code" required>
            <button type="submit"
                class="text-white absolute right-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Tìm
                kiếm</button>
        </div>
    </form>
</div>
@if (ViewData["subject"] != null)
{
    @Html.Partial("Join", subject)
}