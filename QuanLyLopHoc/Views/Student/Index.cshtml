@model IEnumerable<QuanLyLopHoc.Models.Entities.Subject>

@{
    ViewData["Title"] = "Danh sách môn học đã tham gia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="grid place-items-center pt-4 pb-2 md:grid-cols-2">
    <h1 class="mr-auto font-medium text-blue-500">Danh sách môn học của bạn</h1>
    <div class="ml-auto">
        <label for="filter">Sắp xếp:</label>
        <select class="" name="filter" id="filter">
            <option value="1">Môn học đã hoàn thành</option>
            <option value="1">Mới tham gia</option>
        </select>
    </div>
</div>
@if (Model != null)
{
    <div class="grid" style="grid-template-columns: repeat(auto-fit, minmax(250px,1fr));">
        @foreach (var item in Model)
        {
            <div class="m-4 max-w-xs bg-white border border-gray-200 rounded-lg shadow dark:border-gray-700">
                <a href="#">
                    <img class="rounded-t-lg" src="https://flowbite.com/docs/images/blog/image-1.jpg" alt="" />
                </a>
                <div class="p-5">
                    <a href="#">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">@Html.DisplayFor(modelItem => item.SubjectName)</h5>
                    </a>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">@Html.DisplayFor(modelItem => item.Description)</p>
                    <a href="#"
                       class="mt-auto inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#9c56d4] rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                        Tham gia lớp học
                        <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                  clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </div>
        }
    </div>
}
